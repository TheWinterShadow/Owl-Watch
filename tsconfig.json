{
  "compilerOptions": {
  "target": "ESNext",
  "module": "commonjs",
  "lib": ["esnext", "esnext.disposable", "dom"],
    "declaration": true,
    "outDir": "./cdk/dist",
    "declarationDir": "./cdk/dist/types",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "."
  },
  "include": ["cdk/**/*", "tests/cdk/**/*"],
  "exclude": ["node_modules", "cdk/dist", "cdk/cdk.out", "cdk/build"]
}
